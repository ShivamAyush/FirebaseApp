<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeTable_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#009688"
            tools:context=".MainActivity">

            <Spinner
                android:id="@+id/spinner_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_widgets"
                android:padding="16dp" />

            <Spinner
                android:id="@+id/spinner_sem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_branch"
                android:layout_margin="16dp"
                android:background="@drawable/bg_widgets"
                android:padding="16dp" />

            <Spinner
                android:id="@+id/spinner_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_sem"
                android:layout_margin="16dp"
                android:background="@drawable/bg_widgets"
                android:padding="16dp" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_course"
                android:layout_margin="16dp"
                android:background="@drawable/bg_widgets" />

            <Spinner
                android:id="@+id/spinner_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/calendarView"
                android:layout_margin="16dp"
                android:background="@drawable/bg_widgets"
                android:padding="16dp" />

            <Button
                android:id="@+id/submit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_time"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_button"
                android:text="Submit"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

    </ScrollView>

</FrameLayout>